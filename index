<!DOCTYPE html>
<html>
<head>
    <title>SignalR Simple Chat</title>
    <style type="text/css">
        .container {
            background-color: #f4f4f4;
            border: 1px solid #808080;
            padding: 20px;
            margin: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <input type="text" id="message" />
        <input type="button" id="sendmessage" value="Send" />
        <input type="hidden" id="displayname"/>
        <span id="count"  style="color: red;" > </span>
        <ul id="discussion"></ul>
        <br/><br/>
        <hr/>
        <br/><br/>
        <ul id="discussion2"></ul>
    </div>
    <!--Script references. -->
    <!--Reference the jQuery library. -->
    <script src="Scripts/jquery-1.6.4.min.js"></script>
    <!--Reference the SignalR library. -->
    <script src="/Scripts/jquery.signalR-2.0.0.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <!--Add script to update the page and send messages.-->
    <script type="text/javascript">
        $(function () {
            // Declare a proxy to reference the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call to broadcast messages.
            chat.client.sendgroup = function (groupname, username, msg) {
                // Html encode display name and message.
              //  var encodedName = $("#displayname").val();// "tamer";// $('<div />').text(username).html();
              //  var encodedMsg = $('#message').val();  //"test msg";// $('<div />').text(message).html();
                var encodedName =  $('<div />').text(username).html();
                var encodedMsg = $('<div />').text(msg).html();
                console.log("msg: "+encodedMsg);
                var encodedgroup = groupname;
                // Add the message to the page.
                if (groupname == "RoomA") {
                    $('#discussion').append('<li><strong>' + encodedName + '[' + encodedgroup + ']'
     + '</strong>:&nbsp;&nbsp;' + encodedMsg + '</li>');
                }

                if (groupname == "RoomB") {
                    $('#discussion2').append('<li><strong>' + encodedName + '[' + encodedgroup + ']'
    + '</strong>:&nbsp;&nbsp;' + encodedMsg + '</li>');
                }

            };
            // Get the user name and store it to prepend to messages.
            $('#displayname').val(prompt('Enter your name:', ''));

            //chat.client.joinGroup = function (groupname) {

            //};

            // Set initial focus to message input box.
            $('#message').focus();

            //$.connection.hub.start(function () {
            //});

            // Start the connection.
            $.connection.hub.start().done(function () {
                var groupname = prompt('Enter Room name:', '');
              //  chat.server.joinGroup(groupname);

                chat.server.joinGroup(groupname).done(function (users) {
                    //use roomInfo object
                    console.log(users);
                    $("#count").html("no of users on group: "+users.length);
                });

                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    console.log("msg server: " + $('#message').val());
                    chat.server.sendtogroup(groupname, $('#displayname').val(), $('#message').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });
    </script>
</body>
</html>
